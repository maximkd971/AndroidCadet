<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <!-- A RecyclerView with some commonly used attributes -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >

    </android.support.v7.widget.RecyclerView>

    <fragment
        android:id="@+id/league_fragment"
        android:name="com.example.androidproject.controller.LeagueController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></fragment>

    <fragment
        android:id="@+id/load_fragment"
        android:name="com.example.androidproject.controller.SplashController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></fragment>

</RelativeLayout>