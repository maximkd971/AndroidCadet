<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39769C"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/load_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/source" />

    <TextView
        android:id="@+id/load_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/load_logo"
        android:layout_alignTop="@+id/load_logo"
        android:layout_marginStart="3dp"
        android:layout_marginTop="467dp"
        android:gravity="center"
        android:text="Chargement ..."
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/load_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Football Information"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:textStyle="bold" />

</RelativeLayout>